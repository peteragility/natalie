{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "DynamoDB resource stack creation using Amplify CLI",
  "Parameters": {
    "partitionKeyName": {
      "Type": "String",
      "Default": "english"
    },
    "partitionKeyType": {
      "Type": "String",
      "Default": "S"
    },
    "env": {
      "Type": "String"
    }
  },
  "Resources": {
    "AcademicWordsTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "AcademicWords",
            {
              "Fn::Join": [
                "",
                [
                  "AcademicWords",
                  "-",
                  { "Ref": "env" }
                ]
              ]
            }
          ]
        },
        "AttributeDefinitions": [
          {
            "AttributeName": "english",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "english",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": 5,
          "WriteCapacityUnits": 5
        }
      }
    }
  },
  "Outputs": {
    "Name": {
      "Value": {
        "Ref": "AcademicWordsTable"
      }
    },
    "Arn": {
      "Value": {
        "Fn::GetAtt": [
          "AcademicWordsTable",
          "Arn"
        ]
      }
    },
    "StreamArn": {
      "Value": {
        "Fn::GetAtt": [
          "AcademicWordsTable",
          "StreamArn"
        ]
      }
    },
    "PartitionKeyName": {
      "Value": {
        "Ref": "partitionKeyName"
      }
    },
    "PartitionKeyType": {
      "Value": {
        "Ref": "partitionKeyType"
      }
    },
    "Region": {
      "Value": {
        "Ref": "AWS::Region"
      }
    }
  }
}
